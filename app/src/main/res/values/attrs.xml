<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundProgressBar">
        <!--out arc width-->
        <attr name="rpb_sweepStrokeWidth" format="dimension|reference" />
        <!--out arc color-->
        <attr name="rpb_sweepStrokeColor" format="color|reference" />
        <!--center radius-->
        <attr name="rpb_centerRadius" format="dimension|reference" />
        <!--outer radius-->
        <attr name="rpb_outerRadius" format="dimension|reference" />
        <!--center text size-->
        <attr name="rpb_centerTextSize" format="dimension|reference" />
        <!--center text color-->
        <attr name="rpb_centerTextColor" format="color|reference" />
        <!--center background color-->
        <attr name="rpb_centerBackgroundColor" format="color|reference" />
        <!--count time(millions)-->
        <attr name="rpb_countDownTimeInMillis" format="integer" />
        <!--outside wrapper color-->
        <attr name="rpb_outsideWrapperColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="CountDownProgressbar">
        <!-- center img-->
        <attr name="cdpb_center_img" format="reference" />

        <!--internal space-->
        <attr name="cdpb_internal_space" format="dimension|reference" />

        <!--progressbar width-->
        <attr name="cdpb_sweepStrokeWidth" format="dimension|reference" />

        <!--progressbar color-->
        <attr name="cdpb_sweepStrokeColor" format="color|reference" />

        <!--outside wrapper color-->
        <attr name="cdpb_outsideWrapperColor" format="color|reference" />

        <!--count time(millions)-->
        <attr name="cdpb_countDownTimeInMillis" format="integer" />
    </declare-styleable>
</resources>